{
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@types/bun": "^1.2.21",
    "@types/node": "^24.3.0",
    "axios": "^1.11.0",
    "boxen": "^8.0.1",
    "chalk": "^5.6.0",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.44.5",
    "express": "^5.1.0",
    "semver": "^7.7.2",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240925.0",
    "autoprefixer": "^10.4.21",
    "drizzle-kit": "^0.31.4",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "wrangler": "^3.22.0"
  },
  "scripts": {
    "dev": "wrangler pages dev --compatibility-date=2024-09-23",
    "build": "bun run build:docs && bun run build:pages",
    "build:docs": "mkdir -p dist/docs && cp -r docs/* dist/docs/ && cp index.html dist/ && cp -r build/* dist/",
    "build:pages": "wrangler pages deployment create --project-name=crystal-clear-architecture",
    "deploy": "bun run build && wrangler pages deploy dist",
    "deploy:preview": "bun run build && wrangler pages deploy dist --branch=main",
    "preview": "wrangler pages dev dist",
    "functions:dev": "wrangler pages dev --functions=functions",
    "lint": "echo 'Linting...'",
    "format": "echo 'Formatting...'",
    "test": "echo 'Testing...'",
    "health": "curl -s https://crystal-clear-architecture.pages.dev/api/health | jq .",
    "health:custom": "curl -s https://docs.apexodds.net/api/health | jq .",
    "domain:setup": "bun run scripts/setup-custom-domain.bun.ts",
    "domain:validate": "bun run scripts/validate-domain-setup.bun.ts",
    "demo:cross-platform": "bun run scripts/demo-cross-platform.bun.ts",
    "domain:test": "curl -I https://docs.apexodds.net/api/health",
    "monitor": "wrangler tail --format=pretty"
  }
}
