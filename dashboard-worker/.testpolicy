# Fire22 Dashboard Worker - Test Execution Policy
# This file controls when tests can be executed

# TEST EXECUTION POLICY
# Tests will ONLY run if ALL pre-checks pass
# If ANY pre-check fails, execution is immediately terminated

POLICY_VERSION=1.0.0
POLICY_ENABLED=true
STRICT_MODE=true

# PRE-CHECK REQUIREMENTS (ALL MUST PASS)
REQUIRE_CODE_LINT=true
REQUIRE_TYPE_CHECK=true
REQUIRE_SYNTAX_VALIDATION=true
REQUIRE_SECURITY_SCAN=true
REQUIRE_DEPENDENCY_AUDIT=true

# FAILURE BEHAVIOR
FAIL_FAST=true
EXIT_ON_FIRST_FAILURE=true
SHOW_FAILURE_DETAILS=true

# BYPASS CONDITIONS (USE WITH EXTREME CAUTION)
ALLOW_BYPASS_WITH_FLAG=false
BYPASS_FLAG=--force-unsafe-test
BYPASS_REQUIRES_CONFIRMATION=true

# LOGGING
LOG_POLICY_ENFORCEMENT=true
LOG_CHECK_RESULTS=true
LOG_BYPASS_ATTEMPTS=true