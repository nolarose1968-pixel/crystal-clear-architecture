{
  "name": "@fire22/security-registry",
  "version": "1.0.0",
  "description": "Fire22 security registry with bunx integration and comprehensive scanning capabilities",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "fire22-security": "dist/cli.js",
    "f22s": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./scanner": {
      "types": "./dist/scanner/index.d.ts",
      "import": "./dist/scanner/index.js"
    },
    "./registry": {
      "types": "./dist/registry/index.d.ts",
      "import": "./dist/registry/index.js"
    },
    "./bunx": {
      "types": "./dist/bunx/index.d.ts",
      "import": "./dist/bunx/index.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js"
    }
  },
  "scripts": {
    "build": "tsc && bun build src/index.ts --outdir=dist --target=bun && chmod +x dist/cli.js",
    "build:watch": "tsc --watch",
    "dev": "bun --watch src/index.ts",
    "cli": "bun src/cli.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "security:scan": "bun src/cli.ts scan",
    "security:audit": "bun src/cli.ts audit",
    "registry:publish": "bun src/cli.ts publish",
    "registry:install": "bun src/cli.ts install",
    "bunx:setup": "bun src/cli.ts bunx:setup",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "pack": "bun pack",
    "publish:registry": "bun publish --registry https://fire22.workers.dev/registry/",
    "\"registry:auth:fix\"": "bun run scripts/fix-registry-authentication.ts fix"
  },
  "dependencies": {
    "zod": "^3.23.8",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "ora": "^8.0.1",
    "semver": "^7.6.0",
    "node-fetch": "^3.3.2",
    "tar": "^7.0.1",
    "crypto": "^1.0.1"
  },
  "peerDependencies": {
    "@fire22/api-consolidated": "workspace:*",
    "@fire22/validator": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@fire22/api-consolidated": {
      "optional": true
    }
  },
  "devDependencies": {
    "typescript": "^5.9.0"
  },
  "keywords": [
    "fire22",
    "security",
    "registry",
    "bunx",
    "scanner",
    "audit",
    "vulnerability",
    "npm",
    "bun",
    "cli"
  ],
  "author": "Fire22 Security Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/brendadeeznuts1111/fire22-dashboard-worker.git",
    "directory": "workspaces/@fire22-security-registry"
  },
  "publishConfig": {
    "registry": "https://fire22.workers.dev/registry/",
    "access": "restricted"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md",
    "CHANGELOG.md",
    "security-policies/**/*"
  ],
  "engines": {
    "bun": ">=1.2.21",
    "node": ">=18.0.0"
  },
  "security": {
    "audit": {
      "level": "high",
      "advisories": true,
      "vulnerabilities": true
    },
    "scanning": {
      "enabled": true,
      "strict": true
    }
  }
}
