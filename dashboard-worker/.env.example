# Dashboard Worker Environment Variables
# Copy this file to .env and fill in your values

# Database
# Note: DB binding is handled by Cloudflare Workers in production

# Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
CASHIER_BOT_TOKEN=your_cashier_bot_token_here

# Fire22 Integration
FIRE22_API_BASE_URL=https://fire22.ag/cloud/api
FIRE22_API_URL=https://api.fire22.com
FIRE22_TOKEN=your_fire22_api_token_here
FIRE22_WEBHOOK_SECRET=your_webhook_secret_here
FIRE22_AGENT_ID=BLAKEPPH
FIRE22_AGENT_OWNER=BLAKEPPH
FIRE22_AGENT_SITE=1

# Fire22 User-Agent Configuration
FIRE22_USER_AGENT=Fire22-Dashboard/3.0.9
BUN_USER_AGENT=Fire22-Dashboard/3.0.9 (Production)

# Authentication
JWT_SECRET=your_super_secret_jwt_key_change_in_production
ADMIN_PASSWORD=Fire22Admin2025!

# Integration Settings
NODE_ENV=development
APP_NAME=Fire22 Dashboard Worker
APP_VERSION=3.0.8
ENABLE_TELEGRAM_INTEGRATION=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_NOTIFICATIONS=true

# Payment Gateway (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Communication Services
SENDGRID_API_KEY=your_sendgrid_key_here
TWILIO_ACCOUNT_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_token_here

# System Configuration
CRON_SECRET=your_super_secret_cron_key_change_in_production

# Development Settings
NODE_ENV=development
BUN_CONFIG_VERBOSE_FETCH=0
BUN_CONFIG_MAX_HTTP_REQUESTS=256
