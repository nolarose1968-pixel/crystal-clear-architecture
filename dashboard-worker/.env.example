# Fire22 Dashboard Worker - Environment Variables
# =================================================
# Copy this file to .env and fill in your values
# For production secrets, use: ./scripts/setup-secrets.sh

# Database Configuration
# Note: D1 databases are configured in wrangler.toml
DATABASE_URL=file:./dashboard.db

# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
CASHIER_BOT_TOKEN=your_cashier_bot_token_here

# Fire22 API Integration
FIRE22_API_BASE_URL=https://fire22.ag/cloud/api
FIRE22_API_URL=https://fire22.ag/cloud/api
FIRE22_TOKEN=your_fire22_api_token_min_32_chars
FIRE22_WEBHOOK_SECRET=your_webhook_secret_min_32_chars
FIRE22_AGENT_ID=BLAKEPPH
FIRE22_AGENT_OWNER=BLAKEPPH
FIRE22_AGENT_SITE=1
FIRE22_USERNAME=your_fire22_username
FIRE22_PASSWORD=your_fire22_password

# Authentication (IMPORTANT: Use strong values in production!)
JWT_SECRET=your_jwt_secret_must_be_at_least_32_characters
ADMIN_PASSWORD=Fire22Admin2025!

# Application Settings
NODE_ENV=development
APP_NAME=Fire22 Dashboard Worker
APP_VERSION=3.0.9
ENABLE_TELEGRAM_INTEGRATION=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_NOTIFICATIONS=true

# Payment Gateway - Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Communication Services
SENDGRID_API_KEY=your_sendgrid_key_here
TWILIO_ACCOUNT_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_token_here

# System Configuration
CRON_SECRET=your_cron_secret_min_32_characters

# Performance & Development Settings
BUN_CONFIG_VERBOSE_FETCH=0
BUN_CONFIG_MAX_HTTP_REQUESTS=256
BUN_CONFIG_DNS_TIME_TO_LIVE_SECONDS=30

# Security Settings
SECURITY_SCANNING_ENABLED=true
ALLOWED_SCOPES=@fire22,@ff,@brendadeeznuts
REGISTRY_NAME=Fire22 Security Registry
MIN_SECURITY_SCORE=50

# Email Security Settings
EMAIL_SECURITY_ENABLED=true
EMAIL_ENCRYPTION_LEVEL=AES_256_GCM
EMAIL_AUDIT_LOGGING=true
EMAIL_BACKUP_ENABLED=true
EMAIL_COMPLIANCE_MODE=SOC2_GDPR_SOX
EMAIL_SECURITY_CLASSIFICATION=CONFIDENTIAL
EMAIL_ALERT_THRESHOLDS={"critical_response_time": 1000, "warning_response_time": 500, "max_failed_auth_attempts": 5, "max_storage_usage_percent": 90, "max_error_rate_percent": 1}

# User Agent Configuration
FIRE22_USER_AGENT=Fire22-Dashboard/3.0.9
BUN_USER_AGENT=Fire22-Dashboard/3.0.9 (Production)
