    "security_levels": {
      "level_1": {
        "name": "Public Integrations",
        "description": "External APIs and services with limited access",
        "risk_level": "Low",
        "approval_process": "Department Head → Security Review (2 days)",
        "examples": ["Social media APIs", "Marketing tools", "Analytics platforms"]
      },
      "level_2": {
        "name": "Internal Integrations",
        "description": "Fire22 internal systems and department connections",
        "risk_level": "Medium",
        "approval_process": "Department Head → Security Review → CTO Approval (5 days)",
        "examples": ["Department dashboards", "Reporting systems", "Workflow tools"]
      },
      "level_3": {
        "name": "Enterprise Integrations",
        "description": "Core business systems with sensitive data access",
        "risk_level": "High",
        "approval_process": "Department Head → Security Review → CTO → CEO Approval (10 days)",
        "examples": ["Financial systems", "Customer databases", "Sportsbook operations"]
      },
      "level_4": {
        "name": "Critical Infrastructure",
        "description": "Mission-critical systems essential for business operations",
        "risk_level": "Critical",
        "approval_process": "Full Executive Review → Board Approval (21 days)",
        "examples": ["Payment processing", "Core databases", "Security systems"]
      }
    },

