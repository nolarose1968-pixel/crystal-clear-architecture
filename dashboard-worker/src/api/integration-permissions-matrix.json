    "access_control_policies": {
      "authentication_methods": {
        "oauth_2_0": {
          "description": "Standard OAuth 2.0 implementation",
          "security_level": ["level_1", "level_2"],
          "requirements": ["Client credentials", "Token refresh", "Scope limitation"]
        },
        "certificate_based": {
          "description": "X.509 certificate authentication",
          "security_level": ["level_3", "level_4"],
          "requirements": ["Valid certificate chain", "Certificate validation", "OCSP checking"]
        },
        "hsm_based": {
          "description": "Hardware Security Module authentication",
          "security_level": ["level_4"],
          "requirements": ["HSM integration", "Hardware-backed keys", "Multi-person authentication"]
        }
      },

