{
  "name": "@fire22/testing-framework",
  "version": "1.0.3",
  "description": "Fire22 Testing Framework - Comprehensive testing utilities, workflows, and validation tools",
  "main": "src/index.ts",
  "type": "module",
  "sideEffects": [
    "./src/index.ts"
  ],
  "author": {
    "name": "Fire22 Development Team",
    "email": "dev@fire22.com",
    "url": "https://fire22.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fire22/dashboard-worker",
    "directory": "packages/testing-framework"
  },
  "scripts": {
    "test:quick": "bun run test-quick.bun.ts",
    "test:checklist": "bun run test-checklist.bun.ts",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "test:integration": "bun test --test-name-pattern='integration'",
    "test:e2e": "bun test --test-name-pattern='e2e'",
    "test:unit": "bun test --test-name-pattern='unit'",
    "test:performance": "bun test --test-name-pattern='performance'",
    "test:security": "bun test --test-name-pattern='security'",
    "test:all": "bun run test:quick && bun run test:checklist && bun run test:integration",
    "build": "bun build ./src/index.ts --target=bun --outdir ./dist",
    "dev": "bun --watch src/index.ts",
    "start": "bun run src/index.ts"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "^1.2.21",
    "typescript": "5.9.2"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "fire22",
    "testing",
    "framework",
    "utilities",
    "validation",
    "workflows",
    "quality-assurance"
  ],
  "config": {
    "testing": {
      "defaultTimeout": 30000,
      "retryAttempts": 3,
      "parallelTests": 4,
      "coverageThreshold": {
        "statements": 80,
        "branches": 70,
        "functions": 80,
        "lines": 80
      }
    },
    "workflows": {
      "quick": "Daily health checks",
      "checklist": "Pre-deployment validation",
      "integration": "Component integration testing",
      "e2e": "End-to-end system testing"
    },
    "validation": {
      "strictMode": true,
      "failFast": true,
      "detailedReporting": true
    }
  },
  "metadata": {
    "component": "testing-framework",
    "responsibilities": [
      "Testing utilities and helpers",
      "Test workflow management",
      "Coverage reporting",
      "Performance testing",
      "Security testing",
      "Integration testing"
    ],
    "testing": {
      "quick": "Fast health checks for daily use",
      "checklist": "Comprehensive validation before deployment",
      "integration": "Component and system integration testing",
      "e2e": "Complete end-to-end system validation"
    }
  },
  "workspaceMeta": {
    "domain": "benchmarking",
    "workspace": "fire22-benchmarking-suite",
    "updatedAt": "2025-08-27T05:43:39.370Z"
  }
}
